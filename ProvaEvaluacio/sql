-- Crear la tabla CIUDAD
CREATE TABLE CIUDAD (
    CODIGO INT PRIMARY KEY,
    NOMBRE VARCHAR(255) NOT NULL
);

-- Crear la tabla PAQUETE
CREATE TABLE PAQUETE (
    CODIGO INT PRIMARY KEY,
    DESCRIPCION VARCHAR(255) NOT NULL,
    DESTINATARIO INT,
    DIRECCION VARCHAR(255) NOT NULL,
    FOREIGN KEY (DESTINATARIO) REFERENCES CIUDAD(CODIGO)
);

-- Crear la tabla CAMION
CREATE TABLE CAMION (
    MATRICULA VARCHAR(10) PRIMARY KEY,
    POTENCIA INT NOT NULL,
    MODELO VARCHAR(255) NOT NULL,
    TIPO VARCHAR(255) NOT NULL
);

-- Crear la tabla CAMIONERO
CREATE TABLE CAMIONERO (
    RFC VARCHAR(15) PRIMARY KEY,
    POBLACION VARCHAR(255) NOT NULL,
    NOMBRE VARCHAR(255) NOT NULL,
    TELEFONO VARCHAR(15) NOT NULL,
    DIRECCION VARCHAR(255) NOT NULL,
    SALARIO DECIMAL(10, 2) NOT NULL,
    FOREIGN KEY (RFC) REFERENCES CAMION(MATRICULA),
    FOREIGN KEY (DIRECCION) REFERENCES PAQUETE(DIRECCION)
);

